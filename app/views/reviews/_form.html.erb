

<%= form_with url: "/restaurants/#{@restaurant[:id]}/reviews", method: :post, :class => "container w-50 mx-auto d-none"   do |f|%>
  <%= f.label :rating , :class => "form-label" %>
  <%= f.number_field :rating, :class => "form-control", :name => "review[rating]" %>
  <%= f.label :content, :class => "form-label" %>
  <%= f.text_field :content, :class => "form-control", :name => "review[content]" %>
  <%= f.button "Create a Review", :class => "btn btn-primary my-3" %>
<% end %>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating %>
  <%= f.input :content %>
  <%= f.input :content %>
  <%= f.input :content %>
  <%= f.submit :class => "btn btn-primary my-3" %>
<% end %>
